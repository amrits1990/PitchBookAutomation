# Environment Configuration for TranscriptRAG

# Alpha Vantage API Configuration (REQUIRED)
# Get your free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Alternative Data Sources (Optional)
YAHOO_FINANCE_ENABLED=true
POLYGON_API_KEY=your_polygon_api_key_here

# Processing Configuration
MAX_TRANSCRIPTS_PER_COMPANY=50
DEFAULT_CHUNK_SIZE=1000
DEFAULT_OVERLAP=200

# Rate Limiting Configuration
API_RATE_LIMIT=5
REQUEST_DELAY=0.2

# Output Configuration
OUTPUT_BASE_DIR=./transcript_results
CLEANUP_AFTER_PROCESSING=false

# Text Processing Configuration
MIN_CHUNK_LENGTH=100
MAX_CHUNK_LENGTH=2000
SENTENCE_OVERLAP_THRESHOLD=0.3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=transcript_rag.log

# Cache Configuration
ENABLE_CACHE=true
CACHE_DURATION_HOURS=24
