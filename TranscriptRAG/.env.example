# Environment Configuration for TranscriptRAG

# Alpha Vantage API Configuration (REQUIRED)
# Get your free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Classic API Configuration (for get_transcript_chunks)
MAX_TRANSCRIPTS_PER_COMPANY=50
DEFAULT_CHUNK_SIZE=1000
DEFAULT_OVERLAP=200
API_RATE_LIMIT=5
REQUEST_DELAY=0.2

# Enhanced Agent Interface Configuration
TRANSCRIPT_RAG_CHUNK_SIZE=800
TRANSCRIPT_RAG_CHUNK_OVERLAP=150
TRANSCRIPT_RAG_ENABLE_AUTO_CLEANUP=true
TRANSCRIPT_RAG_ENABLE_VECTOR_CACHE=true
TRANSCRIPT_RAG_ENABLE_LLM_REFINEMENT=false

# Vector Database Configuration (for enhanced features)
EMBEDDING_MODEL=all-mpnet-base-v2
BM25_WEIGHT=0.4
SEMANTIC_WEIGHT=0.6

# LLM Configuration (for query refinement and evaluation)
OPENAI_API_KEY=your_openai_api_key_here

# Cache Configuration
ENABLE_CACHE=true
CACHE_DURATION_HOURS=24

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=transcript_rag.log
